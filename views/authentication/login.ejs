<%- include('../layout/header') %>

<div class="container w-50 my-2 py-1" name="login-container">
  <div class="brand text-center my-3">
    <img src="/images/spotify-logo.png" width="100" height="" class="img-responsive bg-dark border border-dark rounded-circle">
  </div>
  <div class="page-title my-3" style="font-size: xx-large;    font-weight: 600;">
    Log-In <i class="fa-sharp fa-solid fa-user"></i>
  </div>
  <!-- action="/auth/login" -->
  <form method="post" name="login_form" class="my-1">
    <div class="mb-3 w-100 row" style="align-items: center;">
      <div class="col">
        <label for="username" class="form-label">Phone Number</label>
        <input
          type="text"
          class="form-control"
          id="number"
          name="number"
          aria-describedby="number"
        />
      </div>
      <div class="col">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          aria-describedby="password"
        />
      </div>
    </div>
  </form>
  <hr/>
  <div class="text-center text-danger d-none" id="login_errors" style="font-size:16px"></div>
  <div class="d-flex" style="justify-content: space-between;">
    <div>
      <button type="submit" class="btn btn-primary site-btn" onclick="login()">Submit</button>
    </div>
    <div>Don't have account ? <a role="button" class="btn" onclick="moveToRegister()">Register</a></div>
  </div>
</div>

<%- include('../layout/footer') %>