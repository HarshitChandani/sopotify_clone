<%- include('../layout/header') %>

<div class="container w-50 my-2 py-2" name="register-container">
  <div class="brand text-center my-1">
    <img src="/images/spotify-logo.png" width="100" height="" class="img-responsive bg-dark border border-dark rounded-circle">
  </div>
  <div class="page-title my-3" style="font-size: xx-large;    font-weight: 600;">
    Sign-Up <i class="fa-solid fa-user-plus"></i>
  </div>
  <form method="post" name="register_form">
   <div class="mb-2 w-100 row" style="align-items: center;">
      <div class="col">
         <label for="f_name" class="form-label">First Name</label>
         <input type="text" class="form-control" id="f_name" name="f_name" aria-describedby="f_name"
         />
      </div>
      <div class="col">
         <label for="l_name" class="form-label">Last Name</label>
         <input type="text" class="form-control" id="l_name" name="l_name"
         aria-describedby="l_name" />
      </div>
    </div>
    <div class="w-100 row mb-2" style="align-items:center;">
      <div class="col">
         <label for="username" class="form-label">Phone Number</label>
         <input type="text" class="form-control" id="number" name="number" aria-describedby="number" />
      </div>
      <div class="col">
         <label for="password" class="form-label">Password</label>
         <input type="password" class="form-control" id="password" name="password" aria-describedby="password" />
       </div>
    </div>
  </form>
  <hr/>
  <div class="text-center text-danger d-none" id="login_errors" style="font-size:16px"></div>
  <div class="d-flex" style="justify-content: space-between;">
    <div>
      <button type="submit" class="btn btn-primary site-btn" onclick="register()">Submit</button>
    </div>
    <!-- <div>Already have an account ?<a href="/auth/login" role="button">Register</a></div> -->
  </div>
</div>

<%- include('../layout/footer') %>